{
  "name": "hotel-booking",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "cypress open --e2e",
    "e2e:headless": "cypress run --browser chrome",
    "e2e:ci": "start-server-and-test start http://localhost:3000 cypress:headless",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm e2e:headless",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:status": "prisma migrate status",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:health": "curl http://localhost:3000/api/db/health",
    "backup:pg": "tsx scripts/pg-backup.ts",
    "backup:create": "tsx scripts/backup-create.ts",
    "backup:verify": "tsx scripts/verify-backup.ts",
    "backup:pre-migration": "tsx scripts/backup-pre-migration.ts",
    "backup:restore": "tsx scripts/restore-backup.ts",
    "backup:monitor": "tsx scripts/monitor-backups.ts",
    "perf:check": "tsx scripts/performance-check.ts",
    "perf:check-indexes": "tsx scripts/check-indexes.ts",
    "perf:analyze-queries": "tsx scripts/analyze-queries.ts",
    "perf:cache-stats": "tsx scripts/cache-stats.ts",
    "clean": "rimraf node_modules .next out dist",
    "clean:all": "pnpm clean && rimraf pnpm-lock.yaml",
    "prepare": "prisma generate || exit 0",
    "postinstall": "node scripts/postinstall.js || prisma generate || exit 0",
    "predev": "prisma generate",
    "prebuild": "prisma generate",
    "security:scan": "pnpm audit --audit-level=moderate",
    "security:scan:fix": "pnpm audit --fix",
    "security:check": "pnpm security:scan && pnpm type-check && pnpm lint",
    "security:audit-logs": "tsx scripts/view-audit-logs.ts",
    "security:cleanup-tokens": "tsx scripts/cleanup-expired-tokens.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-tabs": "^1.1.13",
    "@reduxjs/toolkit": "^2.9.1",
    "@stripe/stripe-js": "^8.1.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.546.0",
    "next": "16.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "prisma": "^6.17.1",
    "react": "19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.65.0",
    "react-redux": "^9.2.0",
    "recharts": "^3.3.0",
    "sonner": "^2.0.7",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "twilio": "^5.10.3",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
