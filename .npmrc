# ==========================================
# NPM/PNPM CONFIGURATION
# ==========================================
# Cross-platform configuration for Windows, Linux, and macOS
# Compatible with Vercel, Render, and other hosting platforms
# ==========================================

# Auto-install peer dependencies (works with both npm and pnpm)
auto-install-peers=true

# Don't fail on peer dependency issues
strict-peer-dependencies=false

# Don't fail on unsupported Node.js version
engine-strict=false

# PNPM-specific settings (ignored by npm)
shamefully-hoist=true
public-hoist-pattern[]=*prisma*
public-hoist-pattern[]=@prisma/*

# Registry
registry=https://registry.npmjs.org/
